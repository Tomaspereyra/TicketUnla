<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0 //EN" 
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
 <session-factory name="">
  <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
  <property name="connection.url">jdbc:mysql://localhost/bdticketunla</property>
  <property name="connection.username">root</property>
  <property name="connection.password">root</property>
  <property name="connection.pool_size">1</property>
  <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
  <property name="connectionProperties">useUnicode=yes;characterEncoding=utf8;</property>
  <property name="show_sql">true</property>
  <property name="hibernate.enable_lazy_load_no_trans">true</property>
  
  <!-- Mapeo de tablas-->
  <mapping class="datos.Usuario" resource="mapeos/Usuario.hbm.xml"/>
  <mapping class="datos.Cliente" resource="mapeos/Cliente.hbm.xml"/>
  <mapping class="datos.Evento" resource="mapeos/Evento.hbm.xml"/>
  <mapping class="datos.Descuento" resource="mapeos/Descuento.hbm.xml"/>
  <mapping class="datos.Auditorio" resource="mapeos/Auditorio.hbm.xml"/>
  <mapping class="datos.Sector" resource="mapeos/Sector.hbm.xml"/>
  <mapping class="datos.Funcion" resource="mapeos/Funcion.hbm.xml"/>
  <mapping class="datos.Reserva" resource="mapeos/Reserva.hbm.xml"/>
  <mapping class="datos.Asiento" resource="mapeos/Asiento.hbm.xml"/>
  <mapping class="datos.Ubicacion" resource="mapeos/Ubicacion.hbm.xml"/>
  
  
 </session-factory>
</hibernate-configuration>