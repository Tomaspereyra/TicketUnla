<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="datos.Evento" table="evento">
		<id column="idEvento" name="idEvento">
		<generator class = "identity">
        </generator>
		</id>
		<property column="nombre" name="nombre" type="string" />
		<property column="tipoEvento" name="tipoEvento" type="string" />
		<set name = "lstDescuentos" table = "descuento" order-by = "idDescuento asc" inverse = "true"
           lazy="true" fetch="select">
            <key column = "idEvento" not-null = "true" />
        <one-to-many class = "datos.Descuento" />
        </set>
		
		<many-to-one name="auditorio" class="datos.Auditorio" column="idAuditorio"
		not-null="true"/>
		
	</class>
</hibernate-mapping>